    <option value="0">0</option>
  </select>

  <label for="total_silver"></label>
  <select class="" name="total_silver">
    <option value="0">0</option>
  </select>

  <label for="total_bronze"></label>
  <select class="" name="total_bronze">
    <option value="0">0</option>
  </select>



  <input type='submit' value="Edit Nation!">
  </form>

  <form action="/nations/<%= @nation.id %>" method="post">
